rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user has a specific role
    function hasRole(role) {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == role;
    }

    function isAdmin() { return hasRole('admin'); }
    function isSatpam() { return hasRole('satpam'); }

    // Rules for users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
    }

    // Rules for warga collection
    match /warga/{wargaId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
      allow list: if request.auth != null;
    }

    // Rules for iuran collection
    match /iuran/{iuranId} {
      allow read: if request.auth != null && (isAdmin() || (resource != null && resource.data.noKK == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('noKK', '')));
      allow write: if isAdmin();
      allow list: if request.auth != null && (isAdmin() || (resource != null && resource.data.noKK == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('noKK', '')));
    }

    // Rules for patrol_logs and patrol_checkpoints
    match /patrol_logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin() || isSatpam());
      allow update, delete: if isAdmin();
      allow list: if request.auth != null;
    }
    match /patrol_checkpoints/{cpId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
      allow list: if request.auth != null;
    }

    // Rules for pengumuman and iklan
    match /pengumuman/{id} {
      allow read, list: if true; // Public access for landing page
      allow write: if isAdmin();
    }
    match /iklan/{id} {
      allow read, list: if true; // Public access for landing page
      allow write: if isAdmin();
    }

    // Rules for buku_tamu and serah_terima
    match /buku_tamu/{id} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin() || isSatpam());
      allow update, delete: if isAdmin();
      allow list: if request.auth != null;
    }
    match /serah_terima/{id} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin() || isSatpam());
      allow update, delete: if isAdmin();
      allow list: if request.auth != null;
    }

    // Default catch-all
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
